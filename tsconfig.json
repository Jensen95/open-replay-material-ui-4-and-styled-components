{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["jest", "node"],
		"declaration": true,
		"strict": true,
		"incremental": true
	},
	"include": ["./src/**/*"],
	"ts-node": {
		"transpileOnly": true,
		"transpiler": "ts-node/transpilers/swc-experimental"
	}
}
